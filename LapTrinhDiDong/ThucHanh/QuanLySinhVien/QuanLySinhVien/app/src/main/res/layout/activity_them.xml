<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtClassLabel1_Them"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcc"
        android:gravity="center"
        android:text="Thêm sinh viên"
        android:textSize="30sp"/>
    <TableLayout
        android:id="@+id/tableLayout1_Them"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtClassLabel1_Them"
        android:layout_marginTop="17dp"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/Them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtCodeClass_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lớp:"/>
            <Spinner
                android:id="@+id/spnEditClassCode_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtClassName_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sinh viên"/>
            <EditText
                android:id="@+id/edtEditStudentCode_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3_Them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtClassNumber_Them"
                android:inputType="number"
                android:text="Tên sinh viên:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtEditStudentName_Them"
                android:ems="10">
            </EditText>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4_Them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtGender_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính:" />
            <RadioGroup
                android:id="@+id/rdigroupEditGender_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdiEditMale_Them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Nam"/>
                <RadioButton
                    android:id="@+id/rdiEditFemale_Them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"/>
            </RadioGroup>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5_Them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtBirthDay_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh:"/>
            <EditText
                android:id="@+id/edtEditStudentBirthday_Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1_Them"
        android:layout_marginLeft="0sp">
        <Button
            android:id="@+id/btn_Them"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Thêm"/>
        <Button
            android:id="@+id/btnClearEditStudent_Them"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Xóa trắng"/>
        <Button
            android:id="@+id/btnCloseEditStudent_Them"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Đóng"/>
    </LinearLayout>
</RelativeLayout>