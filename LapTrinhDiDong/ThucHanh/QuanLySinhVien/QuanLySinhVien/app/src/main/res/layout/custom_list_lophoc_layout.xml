<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtMaLopLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="Ma Lop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenLopLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="Ten Lop"
        app:layout_constraintStart_toEndOf="@+id/txtMaLopLV"
        app:layout_constraintTop_toTopOf="@+id/txtMaLopLV" />

    <TextView
        android:id="@+id/txtSiSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="4dp"
        android:text="Si So"
        app:layout_constraintStart_toEndOf="@+id/txtTenLopLV"
        app:layout_constraintTop_toTopOf="@+id/txtTenLopLV" />
</androidx.constraintlayout.widget.ConstraintLayout>